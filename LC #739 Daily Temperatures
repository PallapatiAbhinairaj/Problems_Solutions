class Solution {
public:
    vector<int> dailyTemperatures(vector<int>& temperatures) {

        int n = temperatures.size();

        stack<int>st;
        vector<int>res(n , 0);

        for(int i = 0 ; i < n ; i++)
        {
            

            while(!st.empty() && temperatures[st.top()] < temperatures[i])
            {
                int prevIndex = st.top();
                st.pop();
                res[prevIndex] = i - prevIndex;
            }

            st.push(i);
        }
        return res;
    }
};
