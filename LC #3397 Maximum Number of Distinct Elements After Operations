class Solution {
public:
    int maxDistinctElements(vector<int>& nums, int k) {

        sort(nums.begin() , nums.end());
        long long occupied  = LLONG_MIN;
        int count = 0;

        for(int num : nums) {
            long long left = (long long)num -k;
            long long right = (long long)num + k;
            
            if(occupied < right)
            {
                occupied = max(occupied+1 , left);
                count++;
            }
        }

        return count;

        
        
    }
};
