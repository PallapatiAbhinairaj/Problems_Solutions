class Solution {
public:
    vector<int> sortedSquares(vector<int>& nums) {

        int n = nums.size();
        vector<int> result(n);

        int left = 0;
        int right = n - 1; 
        int i = n - 1 ; 

        while(left <= right)
        {
            if(abs(nums[right]) < abs(nums[left]))
            {
                result[i] = nums[left]*nums[left];
                left++;
            }
            else
            {
                result[i] = nums[right]*nums[right];
                right--;
            }
            i--;
        }


        return result;

       
    }
};
