//Brute Force Approach :sort and check. (time limit exceeded)

class Solution {
public:
    bool isAnagram(string s, string t) {

        unordered_map<char , int> count;

        sort(s.begin(), s.end());
    sort(t.begin(), t.end());
    return s == t;;


        
    }
};


---------------------------------------------------------------------------
//Optmised approach : using hash set 

class Solution {
public:
    bool isAnagram(string s, string t) {
        if(s.length() != t.length()) return false;

        unordered_map<char , int> count;

        for(char c :s) count[c]++;
        for(char c : t) count[c] --;
        for(auto pair : count )
        {
            if(pair.second != 0) return false;
        }

        return true;
       
    }
};
